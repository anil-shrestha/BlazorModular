@inherits LayoutComponentBase
@inject IModulesService modulesService
@inject NavigationManager navManager
<PageTitle>MainWeb</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <button class="btn btn-primary" @onclick="ReloadModules">
                <span class="oi oi-reload"  aria-hidden="true"></span>&nbsp;Re-Sync Modules</button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    void ReloadModules()
    {
        modulesService.SyncModules();
        navManager.NavigateTo(navManager.Uri, true);
    }
}
